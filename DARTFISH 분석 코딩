        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "import numpy as np\n",
        "\n",
        "# 1. CSV 파일 불러오기 (예: Dartfish에서 추출한 무릎 각도 데이터)\n",
        "data = pd.read_csv('/content/squat_tracking_data.csv')  # 시간(s), 각도(deg) 컬럼 포함\n",
        "\n",
        "# 2. 열 이름 확인 및 정리 (예: 'Time', 'Angle')\n",
        "data.columns = ['Time', 'Angle']  # 필요시 수정\n",
        "\n",
        "# 3. 각속도(angular velocity) 계산\n",
        "# 각속도 = 각도 변화량 / 시간 변화량 (deg/s)\n",
        "data['AngularVelocity'] = data['Angle'].diff() / data['Time'].diff()\n",
        "\n",
        "# 4. 필터링 또는 이상치 제거 (선택사항)\n",
        "data = data.dropna()  # 첫 행은 NaN 생김 (차분 계산 때문)\n",
        "\n",
        "# 5. 시각화: 각도 변화와 각속도 변화\n",
        "plt.figure(figsize=(12,5))\n",
        "\n",
        "plt.subplot(1,2,1)\n",
        "plt.plot(data['Time'], data['Angle'], label='Angle (deg)')\n",
        "plt.xlabel('Time (s)')\n",
        "plt.ylabel('Angle (deg)')\n",
        "plt.title('Knee Angle Over Time')\n",
        "plt.legend()\n",
        "\n",
        "plt.subplot(1,2,2)\n",
        "plt.plot(data['Time'], data['AngularVelocity'], color='orange', label='Angular Velocity (deg/s)')\n",
        "plt.xlabel('Time (s)')\n",
        "plt.ylabel('Angular Velocity (deg/s)')\n",
        "plt.title('Knee Angular Velocity')\n",
        "plt.legend()\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.show()\n",
        "\n",
        "# 6. 요약 통계량 출력 (예: 최대 각속도, 평균 등)\n",
        "print(\"\\n[Summary Statistics]\")\n",
        "print(f\"최대 각속도: {data['AngularVelocity'].max():.2f} deg/s\")\n",
        "print(f\"평균 각속도: {data['AngularVelocity'].mean():.2f} deg/s\")\n",
        "print(f\"최소 각속도: {data['AngularVelocity'].min():.2f} deg/s\")\n",
        "\n",
        "# 7. 고급 분석 예시: 동작 구간 구분 (예: 내려가는 구간 vs 올라오는 구간)\n",
        "# 기준: 각속도가 음수이면 하강, 양수이면 상승\n",
        "\n",
        "data['Phase'] = np.where(data['AngularVelocity'] < 0, 'Down', 'Up')\n",
        "\n",
        "# 각 페이즈별 평균 속도\n",
        "print(\"\\n[Phase별 평균 각속도]\")\n",
        "print(data.groupby('Phase')['AngularVelocity'].mean())"
