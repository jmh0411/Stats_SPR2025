      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "import numpy as np\n",
        "from scipy.stats import ttest_ind\n",
        "\n",
        "# 1. CSV 파일 두 개 불러오기 (각도 데이터 포함)\n",
        "data1 = pd.read_csv('/content/squat_group1.csv')  # 예: Group A\n",
        "data2 = pd.read_csv('/content/squat_group2.csv')  # 예: Group B\n",
        "\n",
        "# 2. 열 정리 ('Time', 'Angle')라고 가정\n",
        "data1.columns = ['Time', 'Angle']\n",
        "data2.columns = ['Time', 'Angle']\n",
        "\n",
        "# 3. 각속도 계산\n",
        "data1['AngularVelocity'] = data1['Angle'].diff() / data1['Time'].diff()\n",
        "data2['AngularVelocity'] = data2['Angle'].diff() / data2['Time'].diff()\n",
        "\n",
        "data1 = data1.dropna()\n",
        "data2 = data2.dropna()\n",
        "\n",
        "# 4. 통계 비교: 두 그룹의 평균 각속도 비교\n",
        "mean1 = data1['AngularVelocity'].mean()\n",
        "mean2 = data2['AngularVelocity'].mean()\n",
        "\n",
        "# t-검정 수행\n",
        "stat, p_value = ttest_ind(data1['AngularVelocity'], data2['AngularVelocity'])\n",
        "\n",
        "# 5. 결과 출력\n",
        "print(\"[각속도 통계 비교]\")\n",
        "print(f\"Group1 평균 각속도: {mean1:.2f} deg/s\")\n",
        "print(f\"Group2 평균 각속도: {mean2:.2f} deg/s\")\n",
        "print(f\"t-검정 통계량: {stat:.3f}, p-값: {p_value:.4f}\")\n",
        "if p_value < 0.05:\n",
        "    print(\"→ 두 그룹 간의 평균 각속도는 통계적으로 유의미한 차이가 있습니다.\")\n",
        "else:\n",
        "    print(\"→ 두 그룹 간의 평균 각속도 차이는 유의하지 않습니다.\")\n",
        "\n",
        "# 6. 시각화: 평균 각속도 비교 막대그래프 + 시간-각도/각속도 그래프\n",
        "plt.figure(figsize=(15,5))\n",
        "\n",
        "# 평균 비교 막대그래프\n",
        "plt.subplot(1,3,1)\n",
        "plt.bar(['Group1', 'Group2'], [mean1, mean2], color=['skyblue', 'orange'])\n",
        "plt.title('평균 각속도 비교')\n",
        "plt.ylabel('Angular Velocity (deg/s)')\n",
        "\n",
        "# 시간에 따른 각도 비교\n",
        "plt.subplot(1,3,2)\n",
        "plt.plot(data1['Time'], data1['Angle'], label='Group1 Angle')\n",
        "plt.plot(data2['Time'], data2['Angle'], label='Group2 Angle', linestyle='--')\n",
        "plt.title('Knee Angle Over Time')\n",
        "plt.xlabel('Time (s)')\n",
        "plt.ylabel('Angle (deg)')\n",
        "plt.legend()\n",
        "\n",
        "# 시간에 따른 각속도 비교\n",
        "plt.subplot(1,3,3)\n",
        "plt.plot(data1['Time'], data1['AngularVelocity'], label='Group1 Angular Velocity')\n",
        "plt.plot(data2['Time'], data2['AngularVelocity'], label='Group2 Angular Velocity', linestyle='--')\n",
        "plt.title('Angular Velocity Over Time')\n",
        "plt.xlabel('Time (s)')\n",
        "plt.ylabel('Angular Velocity (deg/s)')\n",
        "plt.legend()\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.show()\n"
      ],
      "metadata": {
        "id": "HtczC2VzHDOk"
      },
